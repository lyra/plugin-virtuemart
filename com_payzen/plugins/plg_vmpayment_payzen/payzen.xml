<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" method="upgrade">
	<name>VM Payment - PayZen</name>
	<creationDate>Nov 16 2020</creationDate>
	<author>Payzen Network</author>
	<authorUrl>https://www.lyra.com</authorUrl>
	<authorEmail>support@payzen.eu</authorEmail>
	<authorUrl>https://www.lyra.com</authorUrl>
	<copyright>Copyright (C) 2012 - 2020 Lyra Network. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.4.0</version>
	<description>
		<![CDATA[This plugin enables you to setup your PayZen payment system.]]>
	</description>

	<files>
		<filename plugin="payzen">payzen.php</filename>
		<folder>payzen</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB.plg_vmpayment_payzen.ini</language>
		<language tag="fr-FR">language/fr-FR.plg_vmpayment_payzen.ini</language>
		<language tag="de-DE">language/de-DE.plg_vmpayment_payzen.ini</language>
		<language tag="es-ES">language/es-ES.plg_vmpayment_payzen.ini</language>
	</languages>

	<params addpath="/plugins/vmpayment/payzen/elements" />
	<params addpath="/plugins/vmpayment/payzen/payzen/elements" />

	<params addpath="/administrator/components/com_virtuemart/elements">
		<param type="spacer" default="" level="level1" />
		<param class="level1" type="spacer" default="VMPAYMENT_PAYZEN_MODULE_INFORMATION" />

		<param name="developed_by" type="payzenlabel" label="VMPAYMENT_PAYZEN_DEVELOPED_BY" default="&lt;a href=&quot;https://www.lyra.com/&quot; target=&quot;_blank&quot;&gt;Lyra Network&lt;/a&gt;" />
		<param name="contact_email" type="payzenlabel" label="VMPAYMENT_PAYZEN_CONTACT_EMAIL" default="&lt;a href=&quot;mailto:support@payzen.eu&quot;&gt;support@payzen.eu&lt;/a&gt;" />
		<param name="contrib_version" type="payzenlabel" label="VMPAYMENT_PAYZEN_CONTRIB_VERSION" default="1.4.0" />
		<param name="gateway_version" type="payzenlabel" label="VMPAYMENT_PAYZEN_GATEWAY_VERSION" default="V2" />
		<param name="documentation" type="payzenlabel" label="VMPAYMENT_PAYZEN_DOC" />

		<param type="spacer" default="" level="level1" />
		<param class="level1" type="spacer" default="VMPAYMENT_PAYZEN_PAYMENT_MODULE_SETTINGS" />

		<param name="payment_logos" type="vmfiles" label="VMPAYMENT_PAYZEN_LOGOS"
				description="VMPAYMENT_PAYZEN_LOGOS_DESC"
				directory="/images/stories/virtuemart/payment"
				default="payzen.png" hide_default="1" hide_none="1"
				stripext="0" exclude="^_" />
		<param name="debug" type="radio" default="0" label="VMPAYMENT_PAYZEN_DEBUG" description="VMPAYMENT_PAYZEN_DEBUG_DESC">
			<option value="0">VMPAYMENT_PAYZEN_NO</option>
			<option value="1">VMPAYMENT_PAYZEN_YES</option>
		</param>
		<param name="cost_per_transaction" type="text" label="VMPAYMENT_PAYZEN_COST_PER_TRANSACTION" description="VMPAYMENT_PAYZEN_COST_PER_TRANSACTION_DESC" />
		<param name="cost_percent_total" type="text" label="VMPAYMENT_PAYZEN_COST_PERCENT_TOTAL" description="VMPAYMENT_PAYZEN_COST_PERCENT_TOTAL_DESC" />
		<param name="tax_id" type="vmtaxes" scope="com_virtuemart" label="VMPAYMENT_PAYZEN_TAX" description="VMPAYMENT_PAYZEN_TAX_DESC" />

		<param type="spacer" default="" level="level1" />
		<param class="level1" type="spacer" default="VMPAYMENT_PAYZEN_PAYMENT_GATEWAY_ACCESS" />

		<param name="site_id" type="payzentext" size="10" default="12345678" label="VMPAYMENT_PAYZEN_SITE_ID" description="VMPAYMENT_PAYZEN_SITE_ID_DESC" autocomplete="off" />
		<param name="key_test" type="payzentext" size="20" default="1111111111111111" label="VMPAYMENT_PAYZEN_TEST_KEY" description="VMPAYMENT_PAYZEN_TEST_KEY_DESC" autocomplete="off" />
		<param name="key_prod" type="payzentext" size="20" default="2222222222222222" label="VMPAYMENT_PAYZEN_PROD_KEY" description="VMPAYMENT_PAYZEN_PROD_KEY_DESC" autocomplete="off" />
		<param name="ctx_mode" type="payzenradio" default="TEST" label="VMPAYMENT_PAYZEN_CTX_MODE" description="VMPAYMENT_PAYZEN_CTX_MODE_DESC">
			<option value="TEST">VMPAYMENT_PAYZEN_TEST</option>
			<option value="PRODUCTION">VMPAYMENT_PAYZEN_PRODUCTION</option>
		</param>
		<param name="sign_algo" type="payzenradio" default="SHA-256" label="VMPAYMENT_PAYZEN_SIGN_ALGO" description="VMPAYMENT_PAYZEN_SIGN_ALGO_DESC">
			<option value="SHA-1">SHA-1</option>
			<option value="SHA-256">HMAC-SHA-256</option>
		</param>
		<param name="silent_url" type="payzenurl" label="VMPAYMENT_PAYZEN_URL_CHECK" default="index.php?option=com_virtuemart&amp;view=pluginresponse&amp;task=pluginnotification&amp;tmpl=component" description="VMPAYMENT_PAYZEN_URL_CHECK_DESC" editable="false" />
		<param name="platform_url" type="text" size="50" default="https://secure.payzen.eu/vads-payment/" label="VMPAYMENT_PAYZEN_PLATFORM_URL" description="VMPAYMENT_PAYZEN_PLATFORM_URL_DESC" />

		<param type="spacer" default="" level="level1" />
		<param class="level1" type="spacer" default="VMPAYMENT_PAYZEN_PAYMENT_PAGE" />

		<param name="language" type="payzenlist" default="fr" label="VMPAYMENT_PAYZEN_LANGUAGE" description="VMPAYMENT_PAYZEN_LANGUAGE_DESC" /> 
		<param name="available_languages" type="payzenlist" multiple="multiple" default="" style="width: 300px;" label="VMPAYMENT_PAYZEN_AVAILABLES_LANGUAGES" size= "8" description="VMPAYMENT_PAYZEN_AVAILABLES_LANGUAGES_DESC" /> 
		<param name="capture_delay" type="text" size="10" default="" label="VMPAYMENT_PAYZEN_CAPTURE_DELAY" description="VMPAYMENT_PAYZEN_CAPTURE_DELAY_DESC" />
		<param name="validation_mode" type="list" default="" label="VMPAYMENT_PAYZEN_VALIDATION_MODE" description="VMPAYMENT_PAYZEN_VALIDATION_MODE_DESC">
			<option value="">VMPAYMENT_PAYZEN_DEFAULT</option>
			<option value="0">VMPAYMENT_PAYZEN_AUTOMATIC</option>
			<option value="1">VMPAYMENT_PAYZEN_MANUAL</option>
		</param>
		<param name="payment_cards" type="payzenlist" multiple="multiple" default="" label="VMPAYMENT_PAYZEN_PAYMENT_CARDS" style="width: 300px;" description="VMPAYMENT_PAYZEN_PAYMENT_CARDS_DESC" />

		<param type="spacer" default="" level="level1" />
		<param class="level1" type="spacer" default="VMPAYMENT_PAYZEN_SELECTIVE_3DS" />

		<param name="threeds_min_amount" type="text" size="10" default="" label="VMPAYMENT_PAYZEN_THREEDS_MIN_AMOUNT" description="VMPAYMENT_PAYZEN_THREEDS_MIN_AMOUNT_DESC" />

		<param type="spacer" default="" level="level1" />
		<param class="level1" type="spacer" default="VMPAYMENT_PAYZEN_AMOUNT_RESTRICTIONS" />

		<param name="min_amount" type="text" size="10" default="" label="VMPAYMENT_PAYZEN_AMOUNT_MIN" description="VMPAYMENT_PAYZEN_AMOUNT_MIN_DESC" />
		<param name="max_amount" type="text" size="10" default="" label="VMPAYMENT_PAYZEN_AMOUNT_MAX" description="VMPAYMENT_PAYZEN_AMOUNT_MAX_DESC" />

		<param type="spacer" default="" level="level1" />
		<param class="level1" type="spacer" default="VMPAYMENT_PAYZEN_RETURN_OPTIONS" />

		<param name="redirect_enabled" type="radio" default="0" label="VMPAYMENT_PAYZEN_REDIRECT_ENABLED" description="VMPAYMENT_PAYZEN_REDIRECT_ENABLED_DESC">
			<option value="0">VMPAYMENT_PAYZEN_NO</option>
			<option value="1">VMPAYMENT_PAYZEN_YES</option>
		</param>
		<param name="return_mode" type="list" default="GET" label="VMPAYMENT_PAYZEN_RETURN_MODE" description="VMPAYMENT_PAYZEN_RETURN_MODE_DESC">
			<option value="GET">GET</option>
			<option value="POST">POST</option>
		</param>
		<param name="redirect_success_timeout" type="text" size="10" default="5" label="VMPAYMENT_PAYZEN_REDIRECT_SUCCESS_TIMEOUT" description="VMPAYMENT_PAYZEN_REDIRECT_SUCCESS_TIMEOUT_DESC" />
		<param name="redirect_success_message" class="payzenmessage" type="payzentext" size="50" default="VMPAYMENT_PAYZEN_REDIRECT_DEFAULT_MESSAGE" label="VMPAYMENT_PAYZEN_REDIRECT_SUCCESS_MESSAGE" description="VMPAYMENT_PAYZEN_REDIRECT_SUCCESS_MESSAGE_DESC" />
		<param name="redirect_error_timeout" type="text" size="10" default="5" label="VMPAYMENT_PAYZEN_REDIRECT_ERROR_TIMEOUT" description="VMPAYMENT_PAYZEN_REDIRECT_ERROR_TIMEOUT_DESC" />
		<param name="redirect_error_message" class="payzenmessage" type="payzentext" size="50" default="VMPAYMENT_PAYZEN_REDIRECT_DEFAULT_MESSAGE" label="VMPAYMENT_PAYZEN_REDIRECT_ERROR_MESSAGE" description="VMPAYMENT_PAYZEN_REDIRECT_ERROR_MESSAGE_DESC" />
		<param name="order_success_status" type="vmorderstate" scope="com_virtuemart" default="C" label="VMPAYMENT_PAYZEN_ORDER_SUCCESS_STATUS" description="VMPAYMENT_PAYZEN_ORDER_SUCCESS_STATUS_DESC" />
		<param name="order_failure_status" type="vmorderstate" scope="com_virtuemart" default="X" label="VMPAYMENT_PAYZEN_ORDER_FAILURE_STATUS" description="VMPAYMENT_PAYZEN_ORDER_FAILURE_STATUS_DESC" />
	</params>
</install>